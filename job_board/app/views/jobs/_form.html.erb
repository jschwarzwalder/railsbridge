<%= form_for @job do |f| %>
  <div class="form-group">
    <%= f.label :title  %>
    <%= f.text_field :title, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, size: '60x6', :class => 'form-control' %>
  </div>
  <div>
    <%= f.submit %>
  </div>
<% end %>
